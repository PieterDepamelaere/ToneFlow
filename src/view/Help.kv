<HelpRowView@OneLineIconListItem>:
    icon: 'music-note' # One can code an if-statement after this
    list_obj: None
    help_entry_obj: None
    on_release: toast(self.text) #root.callback(root.icon)
    text: '' if self.help_entry_obj is None else self.help_entry_obj.file_path.stem

    BoxLayout:
        orientation: 'horizontal'
        #size_hint_y: None
        #height: '56'
        spacing: '5dp'
        pos_hint: {'center_y': 0.5}

        MDIconButton:
            icon: root.icon
            on_release: toast(root.text) #root.on_release()

        Widget:

        MDIconButton:
            icon: 'pencil'
            #theme_text_color: 'Custom'
            #text_color: app.theme_cls.primary_color
            on_release: root.list_obj.show_dialog_rename_help(root)

        MDIconButton:
            icon: 'trash-can'
            #theme_text_color: 'Custom'
            #text_color: app.theme_cls.primary_color
            on_release: root.list_obj.show_dialog_remove_help(root)

<Help>
    id: id_help
    name: CU.tfs.dic['SCREEN_HELP_CLASS'].value.__name__
    on_enter:
        self.refresh_list()
        # Override needed overscroll to refresh the screen to the bare minimum:
        refresh_layout.effect_cls.min_scroll_to_reload = -dp(1)

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(20)

        BoxLayout:
            size_hint_y: None
            height: self.minimum_height

            MDIconButton:
                id: magnifier_button
                icon: 'magnify'
                on_release: root.filter_list()

            MDTextField:
                id: search_field
                hint_text: 'Search help'
                color_mode: 'primary' #'primary', options=['primary', 'accent', 'custom']
                on_text: root.filter_list()
                helper_text: 'Enter a small snippet of the name of the intended help'
                helper_text_mode: 'on_focus'

            MDIconButton:
                id: close_button
                icon: 'close'
                on_release: root.clear_search_pattern()

        MDScrollViewRefreshLayout:
            id: refresh_layout
            refresh_callback: root.refresh_list
            root_layout: app.main_widget.ids.float_box

            RecycleView:
                id: rv
                key_viewclass: 'viewclass'
                key_size: 'height'

                #SelectableRecycleBoxLayout:
                 #   default_size: None, dp(56)
                  #  default_size_hint: 1, None
                   # size_hint_y: None
                    #height: self.minimum_height
                    #orientation: 'vertical'
                    #multiselect: True
                    #touch_multiselect: True

                RecycleBoxLayout:
                    padding: dp(10)
                    default_size: None, dp(48)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'

    MDFloatingActionButton:
        id: floating_action_button
        icon: 'folder-plus'
        elevation_normal: 8
        x: Window.width - self.width - dp(25)
        y: dp(25)
        md_bg_color: app.theme_cls.primary_color
        specific_text_color: get_color_from_hex(text_colors[app.theme_cls.primary_palette][CU.tfs.dic['THEME_BACKGROUND_HUE'].value])
        on_release: root.show_filemanager_add_help_location()
